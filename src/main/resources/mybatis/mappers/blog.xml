<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="blog">

	<!-- 블로그생성 -->
	<insert id="insertBlog" parameterType="BlogVo">
		<![CDATA[
			INSERT INTO blog(id, blogTitle)
			VALUES(#{id} ,
				   #{blogTitle}
				   )
		]]>
	</insert>


	<!-- id로 블로그 선택 -->
	<select id="getBlog" parameterType="String" resultType="BlogVo">
		<![CDATA[
			select b.id,
      			   b.blogTitle,
       			   b.logoFile,
			       u.userName
			from blog b, users u
			where b.id = u.id
			and u.id = #{id}
		]]>
	</select>


	<!-- 업로드 -->
	<update id="basicUpload" parameterType="BlogVo">
		<![CDATA[
			update blog
			set blogTitle = #{blogTitle},
    			logoFile =  #{logoFile}
			where id = #{id}
		]]>
	</update>


	<!-- 업로드 -->
	<update id="titleUpload" parameterType="BlogVo">
		<![CDATA[
			update blog
			set blogTitle = #{blogTitle}
			where id = #{id}
		]]>
	</update>


</mapper>